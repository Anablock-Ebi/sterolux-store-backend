{
  "name": "sterolux-ecommerce",
  "version": "0.0.1",
  "description": "Sterolux Ecommerce Backend powered by Medusa.",
  "author": "Sterolux",
  "keywords": [
    "sqlite",
    "postgres",
    "typescript",
    "ecommerce",
    "headless",
    "medusa"
  ],
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' medusa build",
    "seed": "medusa exec ./src/scripts/seed.ts",
    "start": "medusa build && rm -rf public/admin && mkdir -p public && cp -r .medusa/server/public/admin public/ && medusa start",
    "dev": "medusa develop",
    "test:integration:http": "TEST_TYPE=integration:http NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit",
    "test:integration:modules": "TEST_TYPE=integration:modules NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
    "test:unit": "TEST_TYPE=unit NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@medusajs/admin-sdk": "2.11.0",
    "@medusajs/cli": "2.11.0",
    "@medusajs/dashboard": "2.11.0",
    "@medusajs/draft-order": "^2.11.3",
    "@medusajs/framework": "2.11.0",
    "@medusajs/icons": "2.11.0",
    "@medusajs/js-sdk": "2.11.0",
    "@medusajs/medusa": "2.11.0",
    "@medusajs/ui": "4.0.24",
    "@medusajs/workflows-sdk": "2.11.0",
    "@mikro-orm/core": "6.4.16",
    "@mikro-orm/knex": "6.4.16",
    "@mikro-orm/migrations": "6.4.16",
    "@mikro-orm/postgresql": "6.4.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5",
    "@tanstack/react-table": "^8",
    "@uiw/react-json-view": "2.0.0-alpha.39",
    "awilix": "^8.0.1",
    "date-fns": "^4.1.0",
    "i18next": "^24.0.0",
    "payment-stripe": "link:@medusajs/medusa/payment-stripe",
    "pg": "^8.13.0",
    "react-i18next": "^15.0.0",
    "react-router-dom": "^7.9.4",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@medusajs/test-utils": "2.11.0",
    "@medusajs/ui-preset": "2.11.0",
    "@mikro-orm/cli": "6.4.16",
    "@swc/core": "^1.5.7",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.2.25",
    "jest": "^29.7.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.2.11"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0"
}
